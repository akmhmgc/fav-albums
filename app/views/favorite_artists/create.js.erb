<%# 追加されたアーティストへの処理 %>
document.querySelector("#artist-<%= @artist["id"]%>").innerHTML = "";

document.querySelector("#image-<%= @artist["id"]%>").classList.add("opacity-20");

document.querySelector("#flash").innerHTML =
"<%= escape_javascript(render partial: 'shared/flash' )%>";

<%# リストへの追加 %>
var insertHTML = "<%= escape_javascript(render partial: 'artists/added_artist', locals: {artist: @artist} )%>";
var my_list = document.querySelector("#my_list");
my_list.insertAdjacentHTML('beforeend', insertHTML);