<%= form_with(scope: :artist_info, url: favorite_artists_path, remote: true) do |f| %>
<%= f.hidden_field :id, value: artist["id"] %>
<%= f.hidden_field :name, value: artist["name"] %>
<%= f.hidden_field :image_url, value: artist["image_url"] %>
<%= f.button :type => "submit" do %>
<i class='far fa-plus-square fa-3x text-gray-500 absolute top-1 left-2'></i>
<% end %>
<% end %>