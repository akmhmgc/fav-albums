<%= content_for(:image_url, @my_list.image.url) %>

<% @page_title =  @description %>
<main class="max-w-screen-lg mx-auto mt-10 my-12 px-4 md:px-12 relative pb-6 pt-4">
    <div>
        <%= image_tag(@my_list.image.url, class: "block" ) %>
    </div>
    <div>
        <%= @description %>
        <% if @description_twitter %>
        <div class="text-center mt-5">
            <div class="py-3 px-5 rounded w-72 mx-auto text-white text-sm font-bold inline-block md:text-lg" ,
                id="twitter_btn">
                <i class="fab fa-2x fa-twitter align-middle"></i>
                <span class="px-3">Twitterにシェア</span>
            </div>
            <div class="text-center mt-10">
                <%= link_to "もう一度アーティストを選ぶ" ,myFavArtistLists_path ,class:"bg-pink-400 text-white text-sm font-bold py-5 px-6 rounded md:text-lg"%>
            </div>
        </div>
        <% else %>
        <div class="text-center mt-10">
            <%= link_to "あなたもアーティストを選んでみる" ,myFavArtistLists_path ,class:"bg-pink-400 text-white text-sm font-bold py-5 px-6 rounded md:text-lg"%>
        </div>
        <% end %>
    </div>
</main>

<% if @description_twitter %>
<script>
    document.getElementById("twitter_btn").onclick = function () {
        window.open("https://twitter.com/intent/tweet?text=<%= @description_twitter.html_safe%>");
    };
</script>
<% end %>