        <!-- Column -->
        <div class="my-1 px-1 w-1/3 md:w-1/4 lg:my-4 lg:px-1 lg:w-1/5 mb-10 mt-2 artist">
            <%= image_tag(artist_image_url(artist), class: "block w-full") %>
            <h2 class="mt-2">
                <%= artist.name %>
            </h2>
            <%= form_with(scope: :artist_info, url: favorite_artists_path, remote: true) do |f| %>
            <%= f.hidden_field :id, value: artist.id %>
            <%= f.hidden_field :name, value: artist.name %>
            <%= f.hidden_field :image_url, value: artist_image_url(artist) %>
            <%= f.button :type => "submit" do %>
            <i class='far fa-heart' id="like_heart"></i>
            <% end %>
            <% end %>
        </div>