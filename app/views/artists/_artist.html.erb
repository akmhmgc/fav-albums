        <div class="my-1 px-1 w-1/3 md:w-1/4 lg:my-4 lg:px-1 lg:w-1/5 mb-10 mt-2 artist">
            <%= image_tag(artist["image_url"], class: "block w-full") %>
            <h2 class="mt-2">
                <%= artist["name"] %>
            </h2>
            <div id="mylist-<%= artist["id"] %>">
                <% if included_in_mylists?(artist) %>
                <%= render 'artists/remove_from_mylist', artist: artist %>
                <% else %>
                <%= render 'artists/add_to_mylist', artist: artist %>
                <% end %>
            </div>
        </div>